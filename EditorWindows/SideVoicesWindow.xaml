<largoSupport:WinAbstract x:Class="EditorWindows.SideVoicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:largoSupport="clr-namespace:LargoSharedClasses.Support;assembly=LargoSharedClasses"
                          mc:Ignorable="d"
        Title="SideVoicesWindow" Height="158.66" Width="303.868" Closing="Window_Closing"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row ="0" Grid.Column="0"  IsEnabled="True" Visibility="Visible" Name="TopLedgeCommand"  
                        Orientation="Horizontal" Height="36" Margin="9,3,0,0" Width="160"  
                        HorizontalAlignment="Left" VerticalAlignment="Top"  >

            <Button Grid.Row="0" Content="A" HorizontalAlignment="Left" Margin="12,0,0,0" 
                        Width="28" Height="28" VerticalAlignment="Top"  Click="AddLineVoice" 
                        ToolTip="Add voice" />

        </StackPanel>
        <Canvas Grid.Row ="1" x:Name="ChartCanvas" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" />

    </Grid>
</largoSupport:WinAbstract>
