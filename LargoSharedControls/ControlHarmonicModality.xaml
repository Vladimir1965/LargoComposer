<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="LargoSharedControls.ControlHarmonicModality" 
    d:DesignHeight="51
    " d:DesignWidth="400" >

    <UserControl.Resources>
    </UserControl.Resources>

    <Grid>
        <ComboBox x:Name="ComboModalClass" Height="24"  ItemsSource="{Binding}" 
				SelectionChanged="ModalClassSelectionChanged"
				DisplayMemberPath=""  IsSynchronizedWithCurrentItem="False"
                IsEditable="false" IsReadOnly="False" Margin="0,0,0,26"  
		    />
        <ComboBox x:Name="ComboModality" Height="24"  ItemsSource="{Binding}" 
				SelectionChanged="ModalitySelectionChanged"
				DisplayMemberPath="Value"  IsSynchronizedWithCurrentItem="False"
                IsEditable="false" IsReadOnly="False" Margin="0,26,0,1" FontFamily="Courier New"  
		    />
    </Grid>
</UserControl>