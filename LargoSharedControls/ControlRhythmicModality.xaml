<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="LargoSharedControls.ControlRhythmicModality" 
    d:DesignHeight="26" d:DesignWidth="400" >

    <UserControl.Resources>
    </UserControl.Resources>

    <Grid>
        <ComboBox x:Name="ComboModality" Height="24"  ItemsSource="{Binding}" 
				SelectionChanged="ModalitySelectionChanged"
				DisplayMemberPath="ComboOutline"  IsSynchronizedWithCurrentItem="False"
                IsEditable="false" IsReadOnly="False" Margin="0,0,0,0"  
		    />
    </Grid>
</UserControl>