                            </MenuItem>
                            <MenuItem Header="Rhythmic" Click="ViewPanel" Tag="8" >
                                <MenuItem.Icon>
                                    <Image Source="pack://application:,,,/LargoSharedControls;component/Images/icon_rhythm.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <Separator/>
                    <MenuItem Header="Saved harmonic streams" Click="ViewPanel" Tag="9" />
